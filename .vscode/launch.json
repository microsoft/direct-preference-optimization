{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend: Launch & Attach server",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/backend",
            "env": {
            },
            "args": [
                "main:app",
                "--reload",
            ],
            "envFile": "${input:dotEnvFilePath}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "preLaunchTask": "pip install dependencies"
        },
        {
            "name": "Backend: Launch & Attach server (No Install)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/backend",
            "env": {
            },
            "args": [
                "main:app",
                "--reload",
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Frontend: dev",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/frontend",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "dev"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Frontend: watch",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/frontend",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "watch"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Frontend: build",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/frontend",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "build"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Frontend: Launch UI From Edge",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:8000",
            "sourceMaps": true,
            "webRoot": "${workspaceFolder}/frontend/src",
            "skipFiles": [
                "node_modules"
            ],
            "preLaunchTask": "Frontend: Start"
        }
    ],
    "compounds": [
        {
            "name": "Frontend/Backend",
            "configurations": ["Backend: Launch & Attach server (No Install)", "Frontend: dev"],
            "stopAll": true
        }
    ],
    "inputs": [
        {
            "id": "dotEnvFilePath",
            "type": "command",
            "command": "azure-dev.commands.getDotEnvFilePath"
        }
    ]
}